{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types/express/index.d.ts"], 
  },
  "include": [
    "src/**/*.ts",
    ".eslintrc.js",
    ".prettierrc.js",
    "index.ts",
  ],
  "exclude": ["node_modules"]
}
